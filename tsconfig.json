{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "outDir": "src",
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "incremental": true,
    },
    "include": [
        "src_ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "src"
    ]
}